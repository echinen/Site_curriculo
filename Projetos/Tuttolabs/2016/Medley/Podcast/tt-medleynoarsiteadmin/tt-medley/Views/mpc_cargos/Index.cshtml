@model IEnumerable<tt_medley.Models.mpc_cargos>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de cargos</h2>

<a href="@Url.Action("Create", "mpc_cargos", null)" title="Cadastrar Novo Cargo" class="btn btn-info">
    <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span>
    Cadastrar Novo Cargo
</a>
<br /><hr />
<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Descrição
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricao)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.id }, new { @class = "editIcon" })
            @Html.ActionLink(" ", "Delete", new { id=item.id }, new { @class = "deleteIcon" })
        </td>
    </tr>
}

</table>
