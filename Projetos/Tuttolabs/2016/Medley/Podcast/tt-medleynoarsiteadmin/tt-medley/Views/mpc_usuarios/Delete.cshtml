@model tt_medley.Models.mpc_usuarios

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja remover "@Html.DisplayFor(model => model.nome)" da sua base de dados?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            Nome
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            CPF
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cpf)
        </dd>

        <dt>
            Matrícula
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_matricula)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a href="@Url.Action("Index", "mpc_usuarios", null)" title="Voltar para a Lista de Usuários" class="btn btn-info">
                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                Voltar
            </a>
            <input type="submit" value="Excluir" class="btn btn-primary" />
        </div>
    }
</div>
