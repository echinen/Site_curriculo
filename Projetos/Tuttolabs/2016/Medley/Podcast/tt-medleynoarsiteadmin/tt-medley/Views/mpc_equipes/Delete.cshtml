@model tt_medley.Models.mpc_equipes

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja remover "@Html.DisplayFor(model => model.nome)" da base de dados?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            Nome
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            Descrição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descricao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.nome)
        @Html.HiddenFor(model => model.descricao)

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-primary" />
        </div>
    }
</div>
<br />
<a href="@Url.Action("Index", "mpc_equipes", null)" title="Voltar para a Lista de Equipes" class="btn btn-info">
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    Voltar
</a>